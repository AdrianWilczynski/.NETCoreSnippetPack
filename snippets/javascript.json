{
    "Simple Webpack Config for ASP.NET Core": {
        "prefix": "asp-webpack",
        "body": [
            "//@ts-check",
            "",
            "// 1) Run 'npm install css-loader style-loader ts-loader typescript webpack webpack-cli --save-dev'.",
            "// 2) Run 'tsc --init' to create tsconfig.json file.",
            "// 3) Run 'npx webpack' to compile.",
            "",
            "const path = require('path');",
            "",
            "/**@type {import('webpack').Configuration}*/",
            "const config = {",
            "\tmode: 'development',",
            "\tentry: {",
            "\t\t${1:site}: '${2:./Client/ts/site.ts}'",
            "\t},",
            "\tresolve: {",
            "\t\textensions: ['.ts', '.js']",
            "\t},",
            "\tmodule: {",
            "\t\trules: [",
            "\t\t\t{",
            "\t\t\t\ttest: /\\.ts$/,",
            "\t\t\t\tuse: 'ts-loader',",
            "\t\t\t\texclude: /node_modules/",
            "\t\t\t},",
            "\t\t\t{",
            "\t\t\t\ttest: /\\.css$/,",
            "\t\t\t\tuse: ['style-loader', 'css-loader']",
            "\t\t\t}",
            "\t\t]",
            "\t},",
            "\toutput: {",
            "\t\tfilename: '[name].js',",
            "\t\tpublicPath: '${3:dist}',",
            "\t\tpath: path.resolve(__dirname, '${4:wwwroot/dist}')",
            "\t}",
            "};",
            "",
            "module.exports = config;"
        ]
    }
}